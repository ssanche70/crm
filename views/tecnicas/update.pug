extends ../layout.pug
block contenido
  #page-wrapper
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            h3.panel-title Editar tecnica
          .panel-body
            form(action="/tecnicas/"+tecnicaUpdate.idTecnica+"?_method=PUT", method="POST")
              fieldset
                .form-group
                  h5  Nombres:
                  input.form-control(type="text", name="name", value=tecnicaUpdate.nombre, required)
                .form-group
                  h5  Apellidos:
                  input.form-control(type="text" , name="last_name", value=tecnicaUpdate.apellido, required)
                if usuario.permisos === 2
                  .form-group
                    h5  Sucursal:
                    select.form-control(name="plaza")
                      option #{tecnicaUpdate.plaza}
                      for sucursal in sucursales
                        if sucursal.plaza != tecnicaUpdate.plaza
                          option #{sucursal.plaza}
                  
                input(type="submit" value="Actualizar" class="btn btn-lg btn-primary btn-block")
  // jQuery
  script(src='/public/vendor/jquery/jquery.min.js')
  // Bootstrap Core JavaScript
  script(src='/public/vendor/bootstrap/js/bootstrap.min.js')
  // Metis Menu Plugin JavaScript
  script(src='/public/vendor/metisMenu/metisMenu.min.js')
  // Custom Theme JavaScript
  script(src='/public/dist/js/sb-admin-2.js')
  script(src='/public/dist/js/bootstrap-select.min.js')
